<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:RuntimeBinder="clr-namespace:Microsoft.CSharp.RuntimeBinder;assembly=Microsoft.CSharp" x:Class="GBPemu.SetupWindow"
        Title="RetroSpy - GameBoy Printer Emulator" SizeToContent="WidthAndHeight"  Closing="Window_Closing" ResizeMode="CanMinimize">

    <Grid Height="432" Width="480">
        <Image x:Name="SetupImage_png" Source="SetupImage.png" Stretch="Fill"/>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="_Options" Name="OptionsMenu">
                    <MenuItem x:Name="FilterCOM" Header="Don't Detect COM Port" HorizontalAlignment="Left" Width="Auto" IsChecked="{Binding FilterCOMPorts}" Checked="FilterCOM_Checked" Unchecked="FilterCOM_Unchecked" IsCheckable="True" />
                </MenuItem>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</Window>